{"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Expenditure on health as a percentage of GDP in 2021",
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/aros0033/3179Week9Homework/refs/heads/main/data/WorldMapWithGraticules.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/aros0033/3179Week9Homework/refs/heads/main/data/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "transform": [
        {
          "lookup": "properties.ADM0_A3",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/aros0033/3179Week9Homework/refs/heads/main/data/WorldDevIndicators.csv"
            },
            "key": "Country Code",
            "fields": ["2021"]
          }
        },
        {
          "calculate": "datum['2021'] *1",  
          "as": "Expenditure as a % of GDP"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Expenditure as a % of GDP",
          "type": "quantitative",
          "scale": {
            "type": "linear"           
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "field": "Expenditure as a % of GDP",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    }
  ]
}